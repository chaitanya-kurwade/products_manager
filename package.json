    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
